{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Feersum REPL",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Feersum/bin/Debug/net5.0/Feersum.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Stage1 Core",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildStage1",
            "program": "${workspaceRoot}/src/Feersum.Stage1/bin/Debug/net5.0/Feersum.Stage1.dll",
            "args": [
              "--output", "bin/Test/",
              "lists.scm",
              "base.sld"
            ],
            "cwd": "${workspaceRoot}/src/Feersum.Core",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Test Example",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/${input:dllToDebug}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "justMyCode": false,
            "console": "internalConsole",
            "requireExactSource": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Feersum Compile",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Feersum/bin/Debug/net5.0/Feersum.dll",
            "args": [
                "--output",
                "${workspaceRoot}/spec/bin",
                "${input:scmToCompile}"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "description": "DLL to debug",
            "id": "dllToDebug"
        },
        {
            "type": "promptString",
            "description": "Scheme file to compile",
            "id": "scmToCompile"
        }
    ]
}
