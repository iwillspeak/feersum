{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Iterfact",
            "type": "coreclr",
            "preLaunchTask": "builditerfact",
            "request": "launch",
            "program": "${workspaceFolder}/spec/bin/iterfact.dll",
            "args": [],
            "cwd": "${workspaceFolder}/spec/bin/",
            "stopAtEntry": true,
            "justMyCode": false,
            "console": "internalConsole",
            "requireExactSource": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Test Example",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/${input:dllToDebug}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "justMyCode": false,
            "console": "internalConsole",
            "requireExactSource": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Feersum",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Feersum/bin/Debug/net5.0/Feersum.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Feersum compile",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Feersum/bin/Debug/net5.0/Feersum.dll",
            "args": [
                "${input:scmToCompile}"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Feersum import  test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Feersum/bin/Debug/net5.0/Feersum.dll",
            "args": [
                "--reference",
                "${workspaceRoot}/spec/bin/qsort.dll",
                "--reference",
                "${workspaceRoot}/spec/bin/libgreet.dll",
                "${workspaceRoot}/importtest.scm",
                "-o",
                "${workspaceRoot}/spec/bin/"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "description": "DLL to debug",
            "id": "dllToDebug"
        },
        {
            "type": "promptString",
            "description": "Scheme file to compile",
            "id": "scmToCompile"
        }
    ]
}