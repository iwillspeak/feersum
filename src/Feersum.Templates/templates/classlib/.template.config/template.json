{
  "$schema": "http://json.schemastore.org/template",
  "author": "Will Speak (@iwillspeak)",
  "classifications": [ "Common", "Library", "Scheme" ],
  "identity": "Feersum.Templates.ClassLibrary",
  "name": "Feersum Scheme class library.",
  "shortName": "classlib",
  "sourceName": "FeersumLibrary",
  "tags": {
    "language": "Scheme",
    "type": "project"
  },
  "symbols": {
    "Framework": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "net5.0",
      "replaces": "net5.0",
      "choices": [
        {
          "choice": "net5.0",
          "description": "Target .NET 5"
        },
        {
          "choice": "net472",
          "description": "Target .NET 4.7.2"
        },
        {
          "choice": "netstandard2.1",
          "description": "Target .NET Standard 2.1"
        }
      ]
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "primaryOutputs": [
    {
      "path": "FeersumLibrary.scmproj"        
    }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
